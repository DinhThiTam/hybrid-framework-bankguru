<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE project>
<suite name="Nop Commerce" parallel="false">
<parameter name = "url" value = "https://demo.nopcommerce.com/" />

	<test name="Run on FIREFOX">
	<parameter name = "browser" value = "firefox"/>
		<classes>
			<class name="com.nopcommerce.login.Practice_TC_01_Register" />
			<class name="com.nopcommerce.login.Practice_TC_02_Login" />
			<class name="com.nopcommerce.login.Practice_TC_03_MyAccount" />
