			<class name="com.nopcommerce.login.Practice_TC_01_Register" />
			<class name="com.nopcommerce.login.Practice_TC_02_Login" />
			<class name="com.nopcommerce.login.Practice_TC_03_MyAccount" />
		</classes>
	</test>
	
	<test name="Run on EDGE_CHROMIUM">
	<parameter name = "browser" value = "edge"/>
		<classes>
			<class name="com.nopcommerce.login.Practice_TC_01_Register" />
			<class name="com.nopcommerce.login.Practice_TC_02_Login" />
			<class name="com.nopcommerce.login.Practice_TC_03_MyAccount" />
